
@{
    ViewBag.Title = "AddItemGroup";
}
@{
    ViewBag.Title = "AddPurchase";
}

<!-- ADD THE CLASS sidedar-collapse TO HIDE THE SIDEBAR PRIOR TO LOADING THE SITE -->
<body class="hold-transition skin-blue sidebar-collapse sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        <!-- ===================Main Header============================ -->
        @Html.Partial("_MainHeader")
        <!-- ===================Main Sidebar============================ -->
        @Html.Partial("_MainSidebar")
        <!-- =============================================== -->

        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1 class="fa fa-shopping-bag">
                    Item Group Detail
                </h1>
                <ol class="breadcrumb">
                    <li><a href="../Software/Dashboard"><i class="fa fa-table"></i> Home</a></li>
                    <li><a href="../Software/ItemGroup">Item Group</a></li>
                    <li class="active">Add Item Group</li>
                </ol>
                <!---Menu Tab-->
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Nav tabs -->
                            <div class="card">
                                <section class="container">
                                    <!--Buttons-->
                                    <div class="btn-group-horizontal pull-right">
                                        <a class="btn btn-app">
                                            <i class="fa fa-lock"></i> Lock
                                        </a>
                                        <a class="btn  btn-app">
                                            <i class="fa fa-unlock"></i> Unlock
                                        </a>
                                        <a class="btn  btn-app">
                                            <i class="fa fa-eye"></i> Preview
                                        </a>
                                        <a class="btn  btn-app">
                                            <i class="fa fa-print"></i> Print
                                        </a>
                                        <a class="btn btn-app">
                                            <i class="fa fa-close"></i> Close
                                        </a>
                                    </div><!--btn horizontal-->
                                </section>
                            </div>
                        </div>
                    </div>
                    <div class="box box-primary">
                        <!-- form start -->
                        <form class="form-horizontal">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="itemGroup" class="col-sm-2 control-label">Item Group</label>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" id="itemGroup" placeholder="NA">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="image" class="col-sm-2 control-label">Image Path</label>
                                            <input type="file" id="image">
                                            <p class="help-block col-sm-10">Choose a file</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="kitchenReport" class="col-sm-3 control-label">Kitchen Report</label>
                                            <div class="col-sm-6">
                                                <select class="form-control">
                                                    <option></option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="box-body table-responsive no-padding">
                                    <table class="table table-bordered">
                                        <tr style="width:100%;background-color:#42A5F5; color:#fff;">
                                            <th style="width:10%"></th>
                                            <th style="text-align: center; vertical-align: middle;">Item</th>
                                        </tr>

                                        <tr style="width:100%;background-color:#BBDEFB; width:10%">
                                            <td style="width:10%"><button class='btn btn-danger btn-xs btn-block'><i class='fa fa-trash'></i> Delete</button></td>
                                            <td></td>
                                        </tr>
                                    </table>
                                </div><!-- /.box-body -->

                            </div><!-- /.box-body -->
                            <div class="box-footer">
                            </div><!-- /.box-footer -->
                        </form>
                    </div><!-- /.box -->
                </div>


            </section>
        </div><!-- ./wrapper -->
        <!-- ===================Main Footer============================ -->
        @Html.Partial("_MainFooter")
    </div>
</body>







