                                                <th rowspan="7" style="background-color:#BBDEFB;color:#000;">Amount Denomination</th>
                                                <td><input type="text" class="form-control" id="" placeholder="0.00"></td>
                                                <td style="width:20%">x &#8369;1,000</td>
                                                <td><input type="text" class="form-control" id="" placeholder="0.00" /></td>
                                                <td style="width:20%">x &#8369;5</td>
                                            </tr>
                                            <tr style="background-color:#42A5F5; color:#fff;">
                                                <td><input type="text" class="form-control" id="" placeholder="0.00"></td>
                                                <td style="width:20%">x &#8369;500</td>
                                                <td><input type="text" class="form-control" id="" placeholder="0.00" /></td>
                                                <td style="width:20%">x &#8369;1</td>
                                            </tr>
                                            <tr style="background-color:#42A5F5; color:#fff;">
                                                <td><input type="text" class="form-control" id="" placeholder="0.00"></td>
                                                <td style="width:20%">x &#8369;500</td>
                                                <td><input type="text" class="form-control" id="" placeholder="0.00" /></td>
