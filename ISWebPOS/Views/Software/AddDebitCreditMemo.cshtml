
@{
    ViewBag.Title = "AddDebitCreditMemo";
}
<style>
   td > input[type='text']{
       border:0px solid;
       background-color:#BBDEFB;
   }
   td > select{
        border:0px;
        outline:0px;
        background-color:#BBDEFB;
   }

</style>
<!-- ADD THE CLASS sidedar-collapse TO HIDE THE SIDEBAR PRIOR TO LOADING THE SITE -->
<body class="hold-transition skin-blue sidebar-collapse sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        <!-- ===================Main Header============================ -->
        @Html.Partial("_MainHeader")
        <!-- ===================Main Sidebar============================ -->
        @Html.Partial("_MainSidebar")
        <!-- =============================================== -->

        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1 class="fa fa-edit">
                    Debit/Credit Memo Detail
                </h1>
                <ol class="breadcrumb">
                    <li><a href="../Software/Dashboard"><i class="fa fa-table"></i> Home</a></li>
                    <li><a href="../Software/DebitCreditMemo">DB/CR Memo</a></li>
                    <li class="active">Add DB/CR Memo</li>
                </ol>
                <!---Menu Tab-->
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Nav tabs -->
                            <div class="card">
                                <section class="container">
                                    <!--Buttons-->
                                    <div class="btn-group-horizontal pull-right">
                                        <a class="btn btn-app">
                                            <i class="fa fa-lock"></i> Lock
                                        </a>
                                        <a class="btn  btn-app">
                                            <i class="fa fa-unlock"></i> Unlock
                                        </a>
                                        <a class="btn  btn-app">
                                            <i class="fa fa-eye"></i> Preview
                                        </a>
                                        <a class="btn  btn-app">
                                            <i class="fa fa-print"></i> Print
                                        </a>
                                        <a class="btn btn-app">
                                            <i class="fa fa-close"></i> Close
                                        </a>
                                    </div><!--btn horizontal-->
                                </section>
                            </div>
                        </div>
                    </div>
                    <div class="box box-primary">
                        <!-- form start -->
                        <form class="form-horizontal">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="dbcrmemoNo" class="col-sm-4 control-label">DB/CR Memo No.</label>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" id="dbcrmemoNo" placeholder="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="address" class="col-sm-4 control-label ">Period</label>
                                            <div class="col-sm-6">
                                                <select class="form-control">
                                                    <option></option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="dbcrMemoDate" class="col-sm-4 control-label">DB/CR Memo Date</label>
                                            <div class="col-sm-6">
                                                <input type="date" class="form-control" id="dbcrMemoDate" placeholder="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="particulas" class="col-sm-4 control-label">Particulas</label>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" id="particulas" placeholder="NA">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="preparedby" class="col-sm-3 control-label">Prepared By</label>
                                            <div class="col-sm-6">
                                                <select class="form-control">
                                                    <option></option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="checkedby" class="col-sm-3 control-label">Checked By</label>
                                            <div class="col-sm-6">
                                                <select class="form-control">
                                                    <option></option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="approvedby" class="col-sm-3 control-label">Approved by</label>
                                            <div class="col-sm-6">
                                                <select class="form-control">
                                                    <option></option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="box-body table-responsive no-padding">
                                    <table class="table table-bordered">
                                        <tr style="width:100%;background-color:#42A5F5; color:#fff;">
                                            <th></th>
                                            <th>Sales No.</th>
                                            <th>Account</th>
                                            <th>Particulars</th>
                                            <th>Debit</th>
                                            <th>Credit</th>
                                        </tr>

                                        <tr style="width:100%;background-color:#BBDEFB;">
                                            <td style="width:10%"><button class='btn btn-danger btn-xs btn-block'><i class='fa fa-trash'></i> Delete</button></td>
                                            <td>
                                                <input type='text' ... list='listid'>
                                                <datalist id='listid'>
                                                    <option label='label1' value='value1'>
                                                    <option label='label2' value='value2'>
                                                        ...
                                                </datalist>
                                            </td>
                                            <td>
                                                <input type='text' ... list='listid'>
                                                <datalist id='listid'>
                                                    <option label='label1' value='value1'>
                                                    <option label='label2' value='value2'>
                                                        ...
                                                </datalist>
                                            </td>
                                            <td></td>
                                            <td style=""><input type="text" class="form-control" id="particulas" placeholder="0.00"></td>
                                            <td><input type="text" class="form-control" id="particulas" placeholder="0.00"></td>
                                        </tr>
                                    </table>
                                </div><!-- /.box-body -->

                            </div><!-- /.box-body -->
                            <div class="box-footer">
                            </div><!-- /.box-footer -->
                        </form>
                    </div><!-- /.box -->
                </div>


            </section>
        </div><!-- ./wrapper -->
        <!-- ===================Main Footer============================ -->
        @Html.Partial("_MainFooter")
    </div>
</body>







