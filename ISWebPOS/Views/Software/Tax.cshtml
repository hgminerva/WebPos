
<div class="box box-info">
    <div class="content">
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <!--table container-->
                    <div class="box">
                        <div class="row">
                            <div class="box-header">
                                <div class="col-md-6">
                                    <!--search box-->
                                    <div class="box-tools">
                                        <div class="input-group" style="width: 150px;">
                                            <input type="text" class="form-control input-sm" id="InputFilter" placeholder="Search tax">
                                            <div class="input-group-btn">
                                                <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="btn-group-horizontal btn-sm pull-right">
                                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addTax"><i class="fa fa-plus"></i>Add</button>
                                </div>
                            </div>
                        </div>
                        <!--table-->
                        <table id="taxCollectionGrid" class="grid border-custom"></table>

                    </div>
                </div>
            </div>
            <!--navigation buttons-->
            <div class="btn-group pull-right" id="navigationPageGrid">
                <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                    <span class="glyphicon glyphicon-fast-backward"></span>
                </button>
                <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                    <span class="glyphicon glyphicon-step-backward"></span>
                </button>
                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid2"></button>
                <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                    <span class="glyphicon glyphicon-step-forward"></span>
                </button>
                <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                    <span class="glyphicon glyphicon-fast-forward"></span>
                </button>
            </div>
        </section>
    </div><!-- ./wrapper -->
    <!-- Company Delete -->
    <div class="modal fade" id="deletetaxConfirm" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete tax? <i class="fa fa-trash"></i></h4>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-danger btn-sm" id="cmdConfirmDeletetax" onclick="cmdtaxConfirmDeleteButton_OnClick()">Delete</button>
                    <button id="cmdConfirmDeleteCloseButton" class="btn btn-primary btn-sm" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Add Modal -->
    <div class="modal modal-primary" id="addTax" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"><i class="fa fa-list"></i></h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="tax" class="col-sm-4 control-label">Tax</label>
                        <div class="">
                            <input type="text" class="form-control" id="tax" placeholder="NA">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="type" class="col-sm-4 control-label">Type</label>
                        <div class="">
                            <select class="form-control">
                                <option>INCLUSIVE </option>
                                <option>EXCLUSIVE</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="rate" class="col-sm-4 control-label">Rate</label>
                        <div class="">
                            <input type="text" class="form-control" id="rate" placeholder="0.0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="account" class="col-sm-4 control-label">Account</label>
                        <div class="">
                            <select class="form-control">
                                <option>Accounts Payable</option>
                                <option>Local Tax Payable</option>
                                <option>VAT Payable -Input</option>
                                <option>VAT Payable - Output</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-outline">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <!-- Loading Modal -->
    <div class="modal fade" id="loadingModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class=" modal-dialog modal-sm">
            Modal content
            <div class="modal-content">
                <div class="modal-body">
                    <h4 style="text-align:center">Loading ...</h4>
                </div>
                <div class="modal-footer">
                    <img class="img-thumbnail img-responsive center-block img-custom" src='~/images/loading/progress_bar.gif'>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

                                                //================
                                                // Global variables
                                                // ================
                                                var taxCollections;
                                                var taxGrid;
                                                var editTax;

                                                var btnFirstPageGrid3;
                                                var btnPreviousPageGrid3;
                                                var btnNextPageGrid3;
                                                var btnLastPageGrid3;
                                                var btnCurrentPageGrid3;

                                                // =============================
                                                // Get taxMasterList Data
                                                // =============================
                                                function getTaxMasterList() {
                                                    var TaxList = new wijmo.collections.ObservableArray();
                                                    $("#loadingModal").modal("show");
                                                    $.ajax({
                                                        url: '/api/tax/list',
                                                        cache: false,
                                                        type: 'GET',
                                                        contentType: 'application/json; charset=utf-8',
                                                        data: {},
                                                        success: function (results) {
                                                            $("#loadingModal").modal("hide");
                                                            /* var results = JSON.parse(result); */
                                                            if (results.length > 0) {
                                                                for (i = 0; i < results.length; i++) {
                                                                    TaxList.push({
                                                                        EditId: "<button class='btn btn-primary btn-xs btn-block' id='taxEditButton' onclick='cmdtaxEditButton_OnClick()'><i class='fa fa-pencil'></i> Edit</button>",
                                                                        DeleteId: "<button class='btn btn-danger btn-xs btn-block' id='taxDeleteButton' onclick='cmdtaxDeleteButton_OnClick()'><i class='fa fa-trash'></i> Delete</button>",
                                                                        Tax: results[i]["Tax"],
                                                                        Code: results[i]["Code"],
                                                                        Rate: results[i]["Rate"],
                                                                        AccountId: results[i]["AccountId"],
                                                                    });
                                                                }
                                                                taxCollections = new wijmo.collections.CollectionView(TaxList);
                                                                btnCurrentPageGrid2.innerHTML = (taxCollections.pageIndex + 1) + ' / ' + taxCollections.pageCount;

                                                                taxCollections.canFilter = true;
                                                                taxCollections.pageSize = 15;

                                                                //Filter
                                                                var filterText = '';
                                                                $('#InputFilter').keydown(function () {
                                                                    filterText = this.value.toLowerCase();
                                                                    taxCollections.refresh();
                                                                });
                                                                taxCollections.filter = function (tax) {
                                                                    return !filterText || (tax.Account.toLowerCase().indexOf(filterText) > -1);
                                                                }
                                                                taxCollections.collectionChanged.addHandler(function (sender, args) {
                                                                    updateNavigateButtonsCollection();

                                                                });
                                                                taxCollections.currentChanged.addHandler(function (sender, args) {
                                                                    updateNavigateButtonsCollection();
                                                                });


                                                                //Flex Grid
                                                                taxGrid = new wijmo.grid.FlexGrid('#taxCollectionGrid');
                                                                taxGrid.initialize({
                                                                    columns: [


                                                                    {
                                                                        "header": "Edit",
                                                                        "binding": "EditId",
                                                                        "width": 60,
                                                                        "align": "center",
                                                                        "isContentHtml": true
                                                                    },
                                                                    {
                                                                        "header": "Delete",
                                                                        "binding": "DeleteId",
                                                                        "width": 70,
                                                                        "align": "center",
                                                                        "isContentHtml": true

                                                                    },
                                                                    {
                                                                        "header": "Tax",
                                                                        "binding": "Tax",
                                                                        "align": "center",
                                                                        "allowSorting": true,
                                                                        "isContentHtml": true,
                                                                        "width": "2*"
                                                                    },
                                                                    {
                                                                        "header": "Code",
                                                                        "binding": "Code",
                                                                        "align": "center",
                                                                        "allowSorting": true,
                                                                        "isContentHtml": true,
                                                                        "width": "2*"
                                                                    },
                                                                     {
                                                                         "header": "Rate(%)",
                                                                         "binding": "Rate",
                                                                         "align": "center",
                                                                         "allowSorting": true,
                                                                         "isContentHtml": true,
                                                                         "width": "2*"
                                                                     },
                                                                     {
                                                                         "header": "Account",
                                                                         "binding": "AccountId",
                                                                         "align": "center",
                                                                         "allowSorting": true,
                                                                         "isContentHtml": true,
                                                                         "width": "2*"
                                                                     
                                                                    }],
                                                                    autoGenerateColumns: false,
                                                                    taxsSource: taxCollections,
                                                                    isReadOnly: true,
                                                                    autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                                                                    allowDragging: wijmo.grid.AllowDragging.None,
                                                                    selectionMode: wijmo.grid.SelectionMode.Row
                                                                });

                                                                taxGrid.trackChanges = true;

                                                                updateNavigateButtonsCollection();

                                                                btnFirstPageGrid3.addEventListener('click', function () {
                                                                    taxCollections.moveToFirstPage();
                                                                    updateNavigateButtonsCollection();
                                                                });
                                                                btnPreviousPageGrid3.addEventListener('click', function () {
                                                                    taxCollections.moveToPreviousPage();
                                                                    updateNavigateButtonsCollection();
                                                                });
                                                                btnNextPageGrid3.addEventListener('click', function () {
                                                                    taxCollections.moveToNextPage();
                                                                    updateNavigateButtonsCollection();
                                                                });
                                                                btnLastPageGrid3.addEventListener('click', function () {
                                                                    taxCollections.moveToLastPage();
                                                                    updateNavigateButtonsCollection();
                                                                });
                                                            } else {
                                                                /*   alert("No data."); */
                                                            }
                                                        }
                                                    });
                                                }

                                                // ===================
                                                // Company Edit Button
                                                // ===================
                                                function cmdCompanyEditButton_OnClick() {
                                                    taxCollections.editPaytytpe(taxCollections.currenttax);

                                                }

                                                // =====================
                                                // tax delete Button
                                                // =====================
                                                function cmdtaxDeleteButton_OnClick() {
                                                    var id = taxCollections.currenttax.Id;

                                                    console.log(typeof id + id);

                                                    $('#deletetaxConfirm').modal({
                                                        show: true,
                                                        backdrop: 'static'
                                                    });
                                                    $("#cmdConfirmDeletetax").prop("disabled", false);
                                                    $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                                                }
                                                 // =====================
                                                // Add Account Button
                                                // =====================
                                                function cmdAddAccountButton_OnClick() {
                                                    $('#addTax').modal({
                                                        show: true,
                                                        backdrop: 'static'
                                                    });
                                                }
                                                // Company Confirm Delete Button
                                                function cmdtaxConfirmDeleteButton_OnClick() {
                                                    $("#cmdConfirmDeletetax").prop("disabled", true);
                                                    $("#cmdConfirmDeleteCloseButton").prop("disabled", true);

                                                    //====================
                                                    var id = taxCollections.currenttax.Id;

                                                    $.ajax({
                                                        url: '/api/tax/list' + id,
                                                        type: "DELETE",
                                                        contentType: "application/json; charset=utf-8",
                                                        dataType: "json",
                                                        statusCode: {
                                                            200: function () {
                                                                $("#cmdConfirmDeletetax").prop("disabled", true);
                                                                $("#cmdConfirmDeleteCloseButton").prop("disabled", true);
                                                                toastr.success("Successfully Deleted");
                                                                window.setTimeout(function () {
                                                                    location.reload()
                                                                }, 1000);
                                                            },
                                                            404: function () {
                                                                toastr.error("Request Not Found");
                                                                $('#deletetaxConfirm').modal('hide');
                                                                $("#cmdConfirmDeletetax").prop("disabled", false);
                                                                $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                                                            },
                                                            400: function () {
                                                                toastr.error("Can't be deleted");
                                                                $('#deleteCompanyConfirm').modal('hide');
                                                                $("#cmdConfirmDeletetax").prop("disabled", false);
                                                                $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                                                            }
                                                        }
                                                    });
                                                }

                                                // ==================
                                                // Navigation Buttons
                                                // ==================
                                                function updateNavigateButtonsCollection() {
                                                    if (taxCollections.pageSize <= 0) {
                                                        document.getElementById('navigationPageGrid').style.display = 'none';
                                                        return;
                                                    }
                                                    document.getElementById('navigationPageGrid').style.display = 'block';
                                                    if (taxCollections.pageIndex === 0) {
                                                        btnFirstPageGrid3.setAttribute('disabled', 'disabled');
                                                        btnPreviousPageGrid3.setAttribute('disabled', 'disabled');
                                                        btnNextPageGrid3.removeAttribute('disabled');
                                                        btnLastPageGrid3.removeAttribute('disabled');
                                                    } else if (taxCollections.pageIndex === (taxCollections.pageCount - 1)) {
                                                        btnFirstPageGrid3.removeAttribute('disabled');
                                                        btnPreviousPageGrid3.removeAttribute('disabled');
                                                        btnLastPageGrid3.setAttribute('disabled', 'disabled');
                                                        btnNextPageGrid3.setAttribute('disabled', 'disabled');
                                                    } else {
                                                        btnFirstPageGrid3.removeAttribute('disabled');
                                                        btnPreviousPageGrid3.removeAttribute('disabled');
                                                        btnNextPageGrid3.removeAttribute('disabled');
                                                        btnLastPageGrid3.removeAttribute('disabled');
                                                    }
                                                    btnCurrentPageGrid2.innerHTML = (taxCollections.pageIndex + 1) + ' / ' + taxCollections.pageCount;

                                                }


                                                //============
                                                // On Page Load
                                                // ============
                                                $(document).ready(function () {

                                                    // Navigation button
                                                    btnFirstPageGrid3 = document.getElementById('btnMoveToFirstPageGrid');
                                                    btnPreviousPageGrid3 = document.getElementById('btnMoveToPreviousPageGrid');
                                                    btnNextPageGrid3 = document.getElementById('btnMoveToNextPageGrid');
                                                    btnLastPageGrid3 = document.getElementById('btnMoveToLastPageGrid');
                                                    btnCurrentPageGrid2 = document.getElementById('btnCurrentPageGrid');

                                                    //Collection View
                                                    getTaxMasterList();

                                                });
    </script>
</div>