            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <!-- Loading Modal -->
    <div class="modal fade" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="Loading..." aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class=" modal-dialog modal-sm">
            Modal content
            <div class="modal-content">
                <div class="modal-body">
                    <h4 style="text-align:center">Loading ...</h4>
                </div>
                <div class="modal-footer">
                    <img class="img-thumbnail img-responsive center-block img-custom" src='~/images/loading/progress_bar.gif'>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        //================
        // Global variables
        // ================
        var taxCollections;
        var taxGrid;
        var editTax;

        var btnFirstPageGrid3;
        var btnPreviousPageGrid3;
        var btnNextPageGrid3;
        var btnLastPageGrid3;
        var btnCurrentPageGrid3;

        // =============================
        // Get ItemMasterList Data
        // =============================
        function getTaxMasterList() {
            var TaxList = new wijmo.collections.ObservableArray();
            $("#loadingModal").modal("show");
            $.ajax({
                url: '/api/tax/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (results) {
                    $("#loadingModal").modal("hide");
                    /* var results = JSON.parse(result); */
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            TaxList.push({
                                EditId: "<button class='btn btn-primary btn-xs btn-block' id='itemEditButton' onclick='cmdItemEditButton_OnClick()'><i class='fa fa-pencil'></i> Edit</button>",
                                DeleteId: "<button class='btn btn-danger btn-xs btn-block' id='itemDeleteButton' onclick='cmdItemDeleteButton_OnClick()'><i class='fa fa-trash'></i> Delete</button>",
                                Tax: results[i]["Tax"],
                                Code: results[i]["Code"],
                                Rate: results[i]["Rate"],
                                AccountId: results[i]["AccountId"],
                            });
                        }
                        taxCollections = new wijmo.collections.CollectionView(TaxList);
                        btnCurrentPageGrid3.innerHTML = (taxCollections.pageIndex + 1) + ' / ' + taxCollections.pageCount;

                        taxCollections.canFilter = true;
                        taxCollections.pageSize = 15;

                        //Filter
                        var filterText = '';
                        $('#InputFilter').keydown(function () {
                            filterText = this.value.toLowerCase();
                            taxCollections.refresh();
                        });
                        taxCollections.filter = function (
                            ) {
                            return !filterText || (item.Tax.toLowerCase().indexOf(filterText) > -1);
                        }
                        taxCollections.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsCollection();

                        });
                        taxCollections.currentChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsCollection();
                        });


                        //Flex Grid
                        taxGrid = new wijmo.grid.FlexGrid('#taxCollectionGrid');
                        taxGrid.initialize({
                            columns: [


                            {
                                "header": "Edit",
                                "binding": "EditId",
                                "width": 60,
                                "align": "center",
                                "isContentHtml": true
                            },
                            {
                                "header": "Delete",
                                "binding": "DeleteId",
                                "width": 70,
                                "align": "center",
                                "isContentHtml": true

                            },
                            {
                                "header": "Tax",
                                "binding": "Tax",
                                "align": "center",
                                "allowSorting": true,
                                "isContentHtml": true,
                                "width": "2*"
                            },
                            {
                                "header": "Code",
                                "binding": "Code",
                                "align": "center",
                                "allowSorting": true,
                                "isContentHtml": true,
                                "width": "2*"
                            },
                            {
                                "header": "Rate (%)",
                                "binding": "Rate",
                                "align": "center",
                                "allowSorting": true,
                                "width": "4*"
                            },
                            {
                                "header": "Account",
                                "binding": "AccountId",
                                "align": "center",
                                "allowSorting": true,
                                "width": "4*"
                            }],
                            autoGenerateColumns: false,
                            itemsSource: taxCollections,
                            isReadOnly: true,
                            autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                            allowDragging: wijmo.grid.AllowDragging.None,
                            selectionMode: wijmo.grid.SelectionMode.Row
                        });

                        taxGrid.trackChanges = true;

                        updateNavigateButtonsCollection();

                        btnFirstPageGrid3.addEventListener('click', function () {
                            taxCollections.moveToFirstPage();
                            updateNavigateButtonsCollection();
                        });
                        btnPreviousPageGrid3.addEventListener('click', function () {
                            taxCollections.moveToPreviousPage();
                            updateNavigateButtonsCollection();
                        });
                        btnNextPageGrid3.addEventListener('click', function () {
                            taxCollections.moveToNextPage();
                            updateNavigateButtonsCollection();
                        });
                        btnLastPageGrid3.addEventListener('click', function () {
                            taxCollections.moveToLastPage();
                            updateNavigateButtonsCollection();
                        });
                    } else {
                        /*   alert("No data."); */
                    }
                }
            });
        }

        // ===================
        // Company Edit Button
        // ===================
        function cmdCompanyEditButton_OnClick() {
            taxCollections.editTax(taxCollections.currentItem);

        }

        // =====================
        // Item delete Button
        // =====================
        function cmdItemDeleteButton_OnClick() {
            var id = taxCollections.currentItem.Id;

            console.log(typeof id + id);

            $('#deleteItemConfirm').modal({
                show: true,
                backdrop: 'static'
            });
            $("#cmdConfirmDeleteItem").prop("disabled", false);
            $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
        }
        // =====================
        // Add Account Button
        // =====================
        function cmdAddAccountButton_OnClick() {
            $('#addAccount').modal({
                show: true,
                backdrop: 'static'
            });
        }
        // Company Confirm Delete Button
        function cmdItemConfirmDeleteButton_OnClick() {
            $("#cmdConfirmDeleteItem").prop("disabled", true);
            $("#cmdConfirmDeleteCloseButton").prop("disabled", true);

            //====================
            var id = taxCollections.currentItem.Id;

            $.ajax({
                url: '/api/account/delete/' + id,
                type: "DELETE",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        $("#cmdConfirmDeleteItem").prop("disabled", true);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", true);
                        toastr.success("Successfully Deleted");
                        window.setTimeout(function () {
                            location.reload()
                        }, 1000);
                    },
                    404: function () {
                        toastr.error("Request Not Found");
                        $('#deleteItemConfirm').modal('hide');
                        $("#cmdConfirmDeleteItem").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    },
                    400: function () {
                        toastr.error("Can't be deleted");
                        $('#deleteCompanyConfirm').modal('hide');
                        $("#cmdConfirmDeleteItem").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    }
                }
            });
        }

        // ==================
        // Navigation Buttons
        // ==================
        function updateNavigateButtonsCollection() {
            if (taxCollections.pageSize <= 0) {
                document.getElementById('navigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('navigationPageGrid').style.display = 'block';
            if (taxCollections.pageIndex === 0) {
                btnFirstPageGrid3.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid3.setAttribute('disabled', 'disabled');
                btnNextPageGrid3.removeAttribute('disabled');
                btnLastPageGrid3.removeAttribute('disabled');
            } else if (taxCollections.pageIndex === (taxCollections.pageCount - 1)) {
                btnFirstPageGrid3.removeAttribute('disabled');
                btnPreviousPageGrid3.removeAttribute('disabled');
                btnLastPageGrid3.setAttribute('disabled', 'disabled');
                btnNextPageGrid3.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid3.removeAttribute('disabled');
                btnPreviousPageGrid3.removeAttribute('disabled');
                btnNextPageGrid3.removeAttribute('disabled');
                btnLastPageGrid3.removeAttribute('disabled');
            }
            btnCurrentPageGrid3.innerHTML = (taxCollections.pageIndex + 1) + ' / ' + taxCollections.pageCount;

        }


        //============
        // On Page Load
        // ============
        $(document).ready(function () {

            // Navigation button
            btnFirstPageGrid3 = document.getElementById('btnMoveToFirstPageGrid');
            btnPreviousPageGrid3 = document.getElementById('btnMoveToPreviousPageGrid');
            btnNextPageGrid3 = document.getElementById('btnMoveToNextPageGrid');
            btnLastPageGrid3 = document.getElementById('btnMoveToLastPageGrid');
            btnCurrentPageGrid3 = document.getElementById('btnCurrentPageGrid3');

            //Collection View
            getTaxMasterList();

        });
    </script>
</div>