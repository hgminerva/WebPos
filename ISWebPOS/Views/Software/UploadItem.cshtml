                <div class="row">
                    <div class="col-xs-12">
                        <!--table container-->
                        <div class="box">
                            <div class="row">
                                <div class="box-header">
                                    <div class="col-md-6">
                                        <!--search box-->
                                        <div class="box-tools">
                                            <div class="input-group" style="width: 150px;">
                                                <input type="text" class="form-control input-sm" id="InputFilter" placeholder="Search">
                                                <div class="input-group-btn">
