@{
    ViewBag.Title = "Stock Out";
}
<!-- ADD THE CLASS sidedar-collapse TO HIDE THE SIDEBAR PRIOR TO LOADING THE SITE -->
<body class="hold-transition skin-blue sidebar-collapse sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        <!-- ===================Main Header============================ -->
        @Html.Partial("_MainHeader")
        <!-- ===================Main Sidebar============================ -->
        @Html.Partial("_MainSidebar")
        <!-- =============================================== -->

        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1 class="fa fa-arrow-circle-o-up">
                    Stock-Out List
                </h1>
                <ol class="breadcrumb">
                    <li><a href="../Software/Dashboard"><i class="fa fa-table"></i> Home</a></li>
                    <li class="active">Stock-Out</li>
                </ol>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">

                        <!--table container-->
                        <div class="box">

                            <div class="row">

                                <div class="box-header">
                                    <div class="col-md-6">
                                        <!--search box-->
                                        <div class="box-tools">
                                            <div class="input-group" style="width: 150px;">
                                                <input type="text" class="form-control input-sm" id="InputFilter" placeholder="Search">
                                                <div class="input-group-btn">
                                                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="btn-group-horizontal btn-sm pull-right">
                                        <a href="~/Software/AddStockOut" class="btn btn-info"><i class="fa fa-plus"></i> Add</a>
                                        <a href="~/Software/Dashboard" class="btn btn-danger "><i class="fa fa-close"></i> Close</a>
                                    </div>
                                </div>
                            </div>
                            <!--table-->
                            <table id="stockOutCollectionGrid" class="grid border-custom"></table>

                        </div>
                    </div>
                </div>
                <!--navigation buttons-->
                <div class="btn-group pull-right" id="navigationPageGrid">
                    <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                        <span class="glyphicon glyphicon-fast-backward"></span>
                    </button>
                    <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                        <span class="glyphicon glyphicon-step-backward"></span>
                    </button>
                    <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                    <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                        <span class="glyphicon glyphicon-step-forward"></span>
                    </button>
                    <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                        <span class="glyphicon glyphicon-fast-forward"></span>
                    </button>
                </div>
            </section>
        </div><!-- ./wrapper -->
        <!-- Company Delete -->
        <div class="modal fade" id="deleteStockOutConfirm" role="dialog">
            <div class="modal-dialog modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Delete Item? <i class="fa fa-trash"></i></h4>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-danger btn-sm" id="cmdConfirmDeleteItem" onclick="cmdItemConfirmDeleteButton_OnClick()">Delete</button>
                        <button id="cmdConfirmDeleteCloseButton" class="btn btn-primary btn-sm" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Loading Modal -->
        <div class="modal fade" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="Loading..." aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class=" modal-dialog modal-sm">
                Modal content
                <div class="modal-content">
                    <div class="modal-body">
                        <h4 style="text-align:center">Loading ...</h4>
                    </div>
                    <div class="modal-footer">
                        <img class="img-thumbnail img-responsive center-block img-custom" src='~/images/loading/progress_bar.gif'>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">

            //================
            // Global variables
            // ================
            var stockOutCollections;
            var stockOutGrid;
            var editStockOut;

            var lastCount = 0;
            var btnFirstPageGrid;
            var btnPreviousPageGrid;
            var btnNextPageGrid;
            var btnLastPageGrid;
            var btnCurrentPageGrid;

            // =============================
            // Get ItemMasterList Data
            // =============================
            function getStockInMasterList() {
                var StockInList = new wijmo.collections.ObservableArray();
                $("#loadingModal").modal("show");
                $.ajax({
                    url: '/api/stockOut/list',
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    data: {},
                    success: function (results) {
                        $("#loadingModal").modal("hide");
                        /* var results = JSON.parse(result); */
                        if (results.length > 0) {
                            for (i = 0; i < results.length; i++) {

                                if (i == lastCount) {
                                    localStorage.setItem("lastCode", results[i]["ItemCode"]);
                                }

                                StockInList.push({
                                    EditId: "<button class='btn btn-primary btn-xs btn-block' id='itemEditButton' onclick='cmdItemEditButton_OnClick()'><i class='fa fa-pencil'></i> Edit</button>",
                                    DeleteId: "<button class='btn btn-danger btn-xs btn-block' id='itemDeleteButton' onclick='cmdItemDeleteButton_OnClick()'><i class='fa fa-trash'></i> Delete</button>",
                                    StockOutDate: results[i]["StockOutDate"],
                                    StockOutNumber: results[i]["StockOutNumber"],
                                    AccountId: results[i]["AccountId"],
                                    IsLocked: results[i]["IsLocked"],
                                    Remarks: results[i]["Remarks"]
                                });
                                lastCount++;
                            }


                            stockOutCollections = new wijmo.collections.CollectionView(StockInList);
                            btnCurrentPageGrid.innerHTML = (stockOutCollections.pageIndex + 1) + ' / ' + stockOutCollections.pageCount;

                            stockOutCollections.canFilter = true;
                            stockOutCollections.pageSize = 15;

                            //Filter
                            var filterText = '';
                            $('#InputFilter').keydown(function () {
                                filterText = this.value.toLowerCase();
                                stockOutCollections.refresh();
                            });
                            stockOutCollections.filter = function (item) {
                                return !filterText || (item.ItemDescription.toLowerCase().indexOf(filterText) > -1)
                                || (item.ItemCode.toLowerCase().indexOf(filterText) > -1)
                                || (item.BarCode.toLowerCase().indexOf(filterText) > -1)
                                || (item.Category.toLowerCase().indexOf(filterText) > -1);
                            }
                            stockOutCollections.collectionChanged.addHandler(function (sender, args) {
                                updateNavigateButtonsCollection();

                            });
                            stockOutCollections.currentChanged.addHandler(function (sender, args) {
                                updateNavigateButtonsCollection();
                            });


                            //Flex Grid
                            stockOutGrid = new wijmo.grid.FlexGrid('#stockOutCollectionGrid');
                            stockOutGrid.initialize({
                                columns: [


                                {
                                    "header": "Edit",
                                    "binding": "EditId",
                                    "width": 60,
                                    "align": "center",
                                    "isContentHtml": true
                                },
                                {
                                    "header": "Delete",
                                    "binding": "DeleteId",
                                    "width": 70,
                                    "align": "center",
                                    "isContentHtml": true

                                },

                                {
                                    "header": "Stock-In Date",
                                    "binding": "StockOutDate",
                                    "align": "center",
                                    "allowSorting": true,
                                    "isContentHtml": true,
                                    "width": "2*"
                                },
                                {
                                    "header": "Stock-In Number",
                                    "binding": "StockOutNumber",
                                    "align": "center",
                                    "allowSorting": true,
                                    "width": "4*"
                                },
                                {
                                    "header": "Supplier",
                                    "binding": "AccountId",
                                    "align": "center",
                                    "allowSorting": true,
                                    "width": "2.5*"
                                },
                                {
                                    "header": "Amount",
                                    "binding": " ",
                                    "align": "center",
                                    "allowSorting": true,
                                    "width": "2.5*"
                                },
                                {
                                    "header": "L",
                                    "binding": "IsLocked",
                                    "align": "center",
                                    "allowSorting": true,
                                    "width": "1.5*"
                                },
                                {
                                    "header": "Remarks",
                                    "binding": "Remarks",
                                    "align": "center",
                                    "allowSorting": true,
                                    "isContentHtml": true,
                                    "width": "2*"
                                }],
                                autoGenerateColumns: false,
                                itemsSource: stockOutCollections,
                                isReadOnly: true,
                                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                                allowDragging: wijmo.grid.AllowDragging.None,
                                selectionMode: wijmo.grid.SelectionMode.Row
                            });

                            stockOutGrid.trackChanges = true;

                            updateNavigateButtonsCollection();

                            btnFirstPageGrid.addEventListener('click', function () {
                                stockOutCollections.moveToFirstPage();
                                updateNavigateButtonsCollection();
                            });
                            btnPreviousPageGrid.addEventListener('click', function () {
                                stockOutCollections.moveToPreviousPage();
                                updateNavigateButtonsCollection();
                            });
                            btnNextPageGrid.addEventListener('click', function () {
                                stockOutCollections.moveToNextPage();
                                updateNavigateButtonsCollection();
                            });
                            btnLastPageGrid.addEventListener('click', function () {
                                stockOutCollections.moveToLastPage();
                                updateNavigateButtonsCollection();
                            });
                        } else {
                            /*   alert("No data."); */
                        }
                    }
                });
            }

            // ===================
            // Company Edit Button
            // ===================
            function cmdCompanyEditButton_OnClick() {
                stockOutCollections.editItem(stockOutCollections.currentItem);

            }

            // =====================
            // Item delete Button
            // =====================
            function cmdItemDeleteButton_OnClick() {
                var id = stockOutCollections.currentItem.Id;

                console.log(typeof id + id);

                $('#deleteStockOutConfirm').modal({
                    show: true,
                    backdrop: 'static'
                });
                $("#cmdConfirmDeleteItem").prop("disabled", false);
                $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
            }
            // Company Confirm Delete Button
            function cmdItemConfirmDeleteButton_OnClick() {
                $("#cmdConfirmDeleteItem").prop("disabled", true);
                $("#cmdConfirmDeleteCloseButton").prop("disabled", true);

                //====================
                var id = stockOutCollections.currentItem.Id;

                $.ajax({
                    url: '/api/stockOut/delete/' + id,
                    type: "DELETE",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    statusCode: {
                        200: function () {
                            $("#cmdConfirmDeleteItem").prop("disabled", true);
                            $("#cmdConfirmDeleteCloseButton").prop("disabled", true);
                            toastr.success("Successfully Deleted");
                            window.setTimeout(function () {
                                location.reload()
                            }, 1000);
                        },
                        404: function () {
                            toastr.error("Request Not Found");
                            $('#deleteStockOutConfirm').modal('hide');
                            $("#cmdConfirmDeleteItem").prop("disabled", false);
                            $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                        },
                        400: function () {
                            toastr.error("Can't be deleted");
                            $('#deleteStockOutConfirm').modal('hide');
                            $("#cmdConfirmDeleteItem").prop("disabled", false);
                            $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                        }
                    }
                });
            }

            // ==================
            // Navigation Buttons
            // ==================
            function updateNavigateButtonsCollection() {
                if (stockOutCollections.pageSize <= 0) {
                    document.getElementById('navigationPageGrid').style.display = 'none';
                    return;
                }
                document.getElementById('navigationPageGrid').style.display = 'block';
                if (stockOutCollections.pageIndex === 0) {
                    btnFirstPageGrid.setAttribute('disabled', 'disabled');
                    btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                    btnNextPageGrid.removeAttribute('disabled');
                    btnLastPageGrid.removeAttribute('disabled');
                } else if (stockOutCollections.pageIndex === (stockOutCollections.pageCount - 1)) {
                    btnFirstPageGrid.removeAttribute('disabled');
                    btnPreviousPageGrid.removeAttribute('disabled');
                    btnLastPageGrid.setAttribute('disabled', 'disabled');
                    btnNextPageGrid.setAttribute('disabled', 'disabled');
                } else {
                    btnFirstPageGrid.removeAttribute('disabled');
                    btnPreviousPageGrid.removeAttribute('disabled');
                    btnNextPageGrid.removeAttribute('disabled');
                    btnLastPageGrid.removeAttribute('disabled');
                }
                btnCurrentPageGrid.innerHTML = (stockOutCollections.pageIndex + 1) + ' / ' + stockOutCollections.pageCount;

            }


            //============
            // On Page Load
            // ============
            $(document).ready(function () {

                // Navigation button
                btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
                btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
                btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
                btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
                btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');

                //Collection View
                getStockInMasterList();

            });
        </script>
        <!-- ===================Main Footer============================ -->
        @Html.Partial("_MainFooter")
    </div>
</body>





