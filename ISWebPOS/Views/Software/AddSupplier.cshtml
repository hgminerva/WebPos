
@{
    ViewBag.Title = "AddSupplier";
}
<!-- ADD THE CLASS sidedar-collapse TO HIDE THE SIDEBAR PRIOR TO LOADING THE SITE -->
<body class="hold-transition skin-blue sidebar-collapse sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        <!-- ===================Main Header============================ -->
        @Html.Partial("_MainHeader")
        <!-- ===================Main Sidebar============================ -->
        @Html.Partial("_MainSidebar")
        <!-- =============================================== -->

        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1 class="fa fa-truck">
                    Supplier Detail
                </h1>
                <ol class="breadcrumb">
                    <li><a href="../Software/Dashboard"><i class="fa fa-table"></i> Home</a></li>
                    <li><a href="../Software/Supplier">Supplier</a></li>
                    <li class="active">Add Supplier</li>
                </ol>
                <!---Menu Tab-->
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">

                            <!-- Nav tabs -->
                            <div class="card">
                                <section class="container">
                                    <!--Buttons-->
                                    <div class="btn-group-horizontal pull-right">
                                        <a class="btn btn-app">
                                            <i class="fa fa-lock"></i> Lock
                                        </a>
                                        <a class="btn  btn-app">
                                            <i class="fa fa-unlock"></i> Unlock
                                        </a>
                                        <a class="btn btn-app">
                                            <i class="fa fa-close"></i> Close
                                        </a>
                                    </div><!--btn horizontal-->
                                </section>
                            </div>
                        </div>
                    </div>
                    <div class="box box-primary">
                        <!-- form start -->
                        <form class="form-horizontal">
                            <div class="box-body">

                                <div class="form-group">
                                    <label for="supplier" class="col-sm-2 control-label">Supplier</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="supplier" placeholder="NA">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="address" class="col-sm-2 control-label">Address</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="address" placeholder="NA">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="telNo" class="col-sm-2 control-label">Telephone No</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="telNo" placeholder="NA">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="celNo" class="col-sm-2 control-label">Cellphone No</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="celNo" placeholder="NA">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="foxNo" class="col-sm-2 control-label">Fox No</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="foxNo" placeholder="NA">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="term" class="col-sm-2 control-label">Term</label>
                                    <div class="col-sm-4">
                                        <select class="form-control">
                                            <option>15 days</option>
                                            <option>30 days</option>
                                            <option>60 days</option>
                                            <option>90 days</option>
                                            <option>120 days</option>
                                            <option>COD </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="tin" class="col-sm-2 control-label">TIN</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="tin" placeholder="NA">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="category" class="col-sm-2 control-label">AP Account</label>
                                    <div class="col-sm-4">
                                        <select class="form-control">
                                            <option>Accounts</option>
                                            <option>Accounts Payable</option>
                                            <option>Local Tax Payable</option>
                                            <option>VAT Payable -Input</option>
                                            <option>VAT Payable -Ouput</option>
                                        </select>
                                    </div>
                                </div>
                             </div><!-- /.box-body -->
                           
                        </form>
                    </div><!-- /.box -->
                </div>


            </section>
        </div><!-- ./wrapper -->
        <!-- ===================Main Footer============================ -->
        @Html.Partial("_MainFooter")
    </div>

</body>


