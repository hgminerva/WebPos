@{
    ViewBag.Title = "EditItem";
}
<body class="hold-transition skin-blue sidebar-collapse sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        <!-- ===================Main Header============================ -->
        @Html.Partial("_MainHeader")
        <!-- ===================Main Sidebar============================ -->
        @Html.Partial("_MainSidebar")
        <!-- =============================================== -->

        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1 class="fa fa-table">
                    Item Detail
                </h1>
                <ol class="breadcrumb">
                    <li><a href="../Software/Dashboard"><i class="fa fa-table"></i> Home</a></li>
                    <li><a href="../Software/Item">Item</a></li>
                    <li class="active">Edit Item</li>
                </ol>
                <!---Menu Tab-->
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">

                            <!-- Nav tabs -->
                            <div class="card">
                                <ul class="nav nav-tabs" role="tablist">
                                    <li role="presentation" class="active"><a href="#genInfo" aria-controls="genInfo" role="tab" data-toggle="tab">General Information</a></li>
                                    <li role="presentation"><a href="#otherInfo" aria-controls="otherInfo" role="tab" data-toggle="tab">Other Information</a></li>
                                    <li role="presentation"><a href="#image" aria-controls="image" role="tab" data-toggle="tab">Image</a></li>
                                </ul>
                                <section class="container">
                                    <!--Buttons-->
                                    <div class="btn-group-horizontal pull-right">
                                        <a class="btn btn-app">
                                            <i class="fa fa-lock"></i> Lock
                                        </a>
                                        <a class="btn  btn-app">
                                            <i class="fa fa-unlock"></i> Unlock
                                        </a>
                                        <a class="btn btn-app">
                                            <i class="fa fa-close"></i> Close
                                        </a>
                                    </div><!--btn horizontal-->
                                </section>

                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active" id="genInfo">

                                        <div class="box box-primary">
                                            <div class="box-header with-border">
                                                <h3 class="box-title" id="genInfo">General Information</h3>
                                            </div><!-- /.box-header -->
                                            <!-- form start -->
                                            <form class="form-horizontal">
                                                <div class="box-body">

                                                    <div class="form-group">
                                                        <label for="itemCode" class="col-sm-2 control-label">Item Code</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="itemCode" placeholder="Item Code">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="barCode" class="col-sm-2 control-label">Bar Code (SKU)</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="barCode" placeholder="NA">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="itemDescription" class="col-sm-2 control-label">Item Description</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="itemDescription" placeholder="NA">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="alias" class="col-sm-2 control-label">Alias</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="alias" placeholder="NA">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="category" class="col-sm-2 control-label">Category</label>
                                                        <div class="col-sm-4">
                                                            <select class="form-control">
                                                                <option>NA</option>
                                                                <option>Kitchen</option>
                                                                <option>Maintenance Supply</option>
                                                                <option>Fans</option>
                                                                <option>Lightning</option>
                                                                <option>Office Supply </option>
                                                                <option>Food</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <!-- select -->
                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Unit</label>
                                                        <div class="col-sm-4">
                                                            <select class="form-control">
                                                                <option>Pair(s)</option>
                                                                <option>PC(s)</option>
                                                                <option>Peso</option>
                                                                <option>Pint(s)</option>
                                                                <option>Quarts(s)</option>
                                                                <option>Ream(s)</option>
                                                                <option>Roll(s)</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <!-- select -->
                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Default Supplier</label>
                                                        <div class="col-sm-4">
                                                            <select class="form-control">
                                                                <option>Return from customer</option>
                                                                <option>BQ Gases</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="alias" class="col-sm-2 control-label">Cost</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="cost" placeholder="0.00">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="alias" class="col-sm-2 control-label">Mark up(%)</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="markup" placeholder="0.00">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="alias" class="col-sm-2 control-label">Price</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="price" placeholder="0.00">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="alias" class="col-sm-2 control-label">Stock Level Quantity</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="stocklvlqty" placeholder="0.00">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="alias" class="col-sm-2 control-label">On-Hand Quantity</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="onhandqty" placeholder="0.00">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Inventory</label>
                                                        <div class="col-sm-6">
                                                            <input type="checkbox" class="minimal" checked>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Package</label>
                                                        <div class="col-sm-6">
                                                            <input type="checkbox" class="minimal" checked>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="alias" class="col-sm-2 control-label">Expiry Date</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="expdate" placeholder="">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="alias" class="col-sm-2 control-label">Lot Number</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="lotno" placeholder="">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="alias" class="col-sm-2 control-label">Remarks</label>
                                                        <div class="col-sm-6">
                                                            <textarea max-length="500" class="form-control" id="remarks"></textarea>`
                                                        </div>
                                                    </div>
                                                </div><!-- /.box-body -->
                                                <div class="box-footer">
                                                </div><!-- /.box-footer -->
                                            </form>
                                        </div><!-- /.box -->
                                    </div>
                                    <div role="tabpanel" class="tab-pane" id="otherInfo">
                                        <div class="box box-info">
                                            <div class="box-header with-border">
                                                <h3 class="box-title" id="othInfo">Other Information</h3>
                                            </div><!-- /.box-header -->
                                            <!-- form start -->
                                            <form class="form-horizontal">
                                                <div class="box-body">
                                                    <div class="form-group">
                                                        <label for="genericName" class="col-sm-2 control-label">Generic Name</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="genericName" placeholder="Generic Name">
                                                        </div>
                                                    </div>
                                                </div><!-- /.box-body -->
                                                <div class="form-group">
                                                    <label for="category" class="col-sm-2 control-label">Sales Account</label>
                                                    <div class="col-sm-4">
                                                        <select class="form-control">
                                                            <option>Sales</option>
                                                            <option>Account Name</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="category" class="col-sm-2 control-label">Asset Account</label>
                                                    <div class="col-sm-4">
                                                        <select class="form-control">
                                                            <option>Sales</option>
                                                            <option>Account Name</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="category" class="col-sm-2 control-label">Cost Account</label>
                                                    <div class="col-sm-4">
                                                        <select class="form-control">
                                                            <option>Sales</option>
                                                            <option>Account Name</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="category" class="col-sm-2 control-label">Purchase VAT</label>
                                                    <div class="col-sm-4">
                                                        <select class="form-control">
                                                            <option>Sales</option>
                                                            <option>Account Name</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="category" class="col-sm-2 control-label">Sales VAT</label>
                                                    <div class="col-sm-4">
                                                        <select class="form-control">
                                                            <option>Sales</option>
                                                            <option>Account Name</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="category" class="col-sm-2 control-label">Kitchen Report</label>
                                                    <div class="col-sm-4">
                                                        <select class="form-control">
                                                            <option>Sales</option>
                                                            <option>Account Name</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="box-body table-responsive no-padding">
                                                    <table class="table table-hover">
                                                        <tr>
                                                            <th>Price Description</th>
                                                            <th>Price</th>
                                                            <th>Trigger Quantity</th>
                                                            <th>Filters</th>
                                                        </tr>
                                                        <tr>
                                                            <td>CLASS A</td>
                                                            <td>0.10</td>
                                                            <td>0.0</td>
                                                            <td>
                                                                <div class="btn-group">
                                                                    <button type="button" class="btn btn-danger fa fa-trash"></button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>CLASS A</td>
                                                            <td>0.10</td>
                                                            <td>0.0</td>
                                                            <td>
                                                                <div class="btn-group">
                                                                    <button type="button" class="btn btn-danger fa fa-trash"></button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div><!-- /.box-body -->
                                                <div class="box-footer">
                                                </div><!-- /.box-footer -->
                                            </form>
                                        </div><!-- /.box -->
                                    </div>
                                    <div role="tabpanel" class="tab-pane" id="image">
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <div class="box box-primary">
                                                        <div class="form-group">
                                                            <label for="image" class="col-sm-2 control-label">Image Path</label>
                                                            <input type="file" id="image">
                                                            <p class="help-block col-sm-10">Choose a file</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!---End Tab-->
            </section>
        </div><!-- ./wrapper -->
        <!-- ===================Main Footer============================ -->
        @Html.Partial("_MainFooter")
    </div>
</body>



