<div class="box box-info">
    <div class="content">
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <!--table container-->
                    <div class="box">
                        <div class="row">
                            <div class="box-header">
                                <div class="col-md-6">
                                    <!--search box-->
                                    <div class="box-tools">
                                        <div class="input-group" style="width: 150px;">
                                            <input type="text" class="form-control input-sm" id="InputFilter" placeholder="Search unit">
                                            <div class="input-group-btn">
                                                <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="btn-group-horizontal btn-sm pull-right">
                                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addPayType"><i class="fa fa-plus"></i>Add</button>
                                </div>
                            </div>
                        </div>
                        <!--table-->
                        <table id="paytypeCollectionGrid" class="grid border-custom"></table>

                    </div>
                </div>
            </div>
            <!--navigation buttons-->
            <div class="btn-group pull-right" id="navigationPageGrid">
                <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                    <span class="glyphicon glyphicon-fast-backward"></span>
                </button>
                <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                    <span class="glyphicon glyphicon-step-backward"></span>
                </button>
                <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid2"></button>
                <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                    <span class="glyphicon glyphicon-step-forward"></span>
                </button>
                <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                    <span class="glyphicon glyphicon-fast-forward"></span>
                </button>
            </div>
        </section>
    </div><!-- ./wrapper -->
    <!-- Company Delete -->
    <div class="modal fade" id="deleteunitConfirm" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete unit? <i class="fa fa-trash"></i></h4>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-danger btn-sm" id="cmdConfirmDeleteunit" onclick="cmdunitConfirmDeleteButton_OnClick()">Delete</button>
                    <button id="cmdConfirmDeleteCloseButton" class="btn btn-primary btn-sm" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Add Modal -->
    <div class="modal modal-primary" id="addPayType" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"><i class="fa fa-list"></i>Pay Type</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="Paytype" class="col-sm-4 control-label">Pay Type</label>
                        <div class="">
                            <input type="text" class="form-control" id="paytype" placeholder="NA">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="account" class="col-sm-4 control-label">Account</label>
                        <div class="">
                            <select class="form-control">
                                <option>CASH ON HAND </option>
                                <option>INVENT0ORY</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-outline">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <!-- Loading Modal -->
    <div class="modal fade" id="loadingModal" tabindex="-1" role="dialog"  aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class=" modal-dialog modal-sm">
            Modal content
            <div class="modal-content">
                <div class="modal-body">
                    <h4 style="text-align:center">Loading ...</h4>
                </div>
                <div class="modal-footer">
                    <img class="img-thumbnail img-responsive center-block img-custom" src='~/images/loading/progress_bar.gif'>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

                                                //================
                                                // Global variables
                                                // ================
                                                var paytypeCollections;
                                                var paytypeGrid;
                                                var editPaytype;

                                                var btnFirstPageGrid2;
                                                var btnPreviousPageGrid2;
                                                var btnNextPageGrid2;
                                                var btnLastPageGrid2;
                                                var btnCurrentPageGrid2;

                                                // =============================
                                                // Get unitMasterList Data
                                                // =============================
                                                function getPaytypeMasterList() {
                                                    var PaytypeList = new wijmo.collections.ObservableArray();
                                                    $("#loadingModal").modal("show");
                                                    $.ajax({
                                                        url: '/api/payType/list',
                                                        cache: false,
                                                        type: 'GET',
                                                        contentType: 'application/json; charset=utf-8',
                                                        data: {},
                                                        success: function (results) {
                                                            $("#loadingModal").modal("hide");
                                                            /* var results = JSON.parse(result); */
                                                            if (results.length > 0) {
                                                                for (i = 0; i < results.length; i++) {
                                                                    PaytypeList.push({
                                                                        EditId: "<button class='btn btn-primary btn-xs btn-block' id='unitEditButton' onclick='cmdunitEditButton_OnClick()'><i class='fa fa-pencil'></i> Edit</button>",
                                                                        DeleteId: "<button class='btn btn-danger btn-xs btn-block' id='unitDeleteButton' onclick='cmdunitDeleteButton_OnClick()'><i class='fa fa-trash'></i> Delete</button>",
                                                                        PayType: results[i]["PayType"],
                                                                        AccountId: results[i]["AccountId"],
                                                                    });
                                                                }
                                                                paytypeCollections = new wijmo.collections.CollectionView(PaytypeList);
                                                                btnCurrentPageGrid2.innerHTML = (paytypeCollections.pageIndex + 1) + ' / ' + paytypeCollections.pageCount;

                                                                paytypeCollections.canFilter = true;
                                                                paytypeCollections.pageSize = 15;

                                                                //Filter
                                                                var filterText = '';
                                                                $('#InputFilter').keydown(function () {
                                                                    filterText = this.value.toLowerCase();
                                                                    paytypeCollections.refresh();
                                                                });
                                                                paytypeCollections.filter = function (unit) {
                                                                    return !filterText || (unit.Account.toLowerCase().indexOf(filterText) > -1);
                                                                }
                                                                paytypeCollections.collectionChanged.addHandler(function (sender, args) {
                                                                    updateNavigateButtonsCollection();

                                                                });
                                                                paytypeCollections.currentChanged.addHandler(function (sender, args) {
                                                                    updateNavigateButtonsCollection();
                                                                });


                                                                //Flex Grid
                                                                paytypeGrid = new wijmo.grid.FlexGrid('#paytypeCollectionGrid');
                                                                paytypeGrid.initialize({
                                                                    columns: [


                                                                    {
                                                                        "header": "Edit",
                                                                        "binding": "EditId",
                                                                        "width": 60,
                                                                        "align": "center",
                                                                        "isContentHtml": true
                                                                    },
                                                                    {
                                                                        "header": "Delete",
                                                                        "binding": "DeleteId",
                                                                        "width": 70,
                                                                        "align": "center",
                                                                        "isContentHtml": true

                                                                    },
                                                                    {
                                                                        "header": "Pay Type",
                                                                        "binding": "PayType",
                                                                        "align": "center",
                                                                        "allowSorting": true,
                                                                        "isContentHtml": true,
                                                                        "width": "2*"
                                                                    },
                                                                    {
                                                                        "header": "Account",
                                                                        "binding": "AccountId",
                                                                        "align": "center",
                                                                        "allowSorting": true,
                                                                        "isContentHtml": true,
                                                                        "width": "2*"
                                                                    }],
                                                                    autoGenerateColumns: false,
                                                                    unitsSource: paytypeCollections,
                                                                    isReadOnly: true,
                                                                    autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                                                                    allowDragging: wijmo.grid.AllowDragging.None,
                                                                    selectionMode: wijmo.grid.SelectionMode.Row
                                                                });

                                                                paytypeGrid.trackChanges = true;

                                                                updateNavigateButtonsCollection();

                                                                btnFirstPageGrid2.addEventListener('click', function () {
                                                                    paytypeCollections.moveToFirstPage();
                                                                    updateNavigateButtonsCollection();
                                                                });
                                                                btnPreviousPageGrid2.addEventListener('click', function () {
                                                                    paytypeCollections.moveToPreviousPage();
                                                                    updateNavigateButtonsCollection();
                                                                });
                                                                btnNextPageGrid2.addEventListener('click', function () {
                                                                    paytypeCollections.moveToNextPage();
                                                                    updateNavigateButtonsCollection();
                                                                });
                                                                btnLastPageGrid2.addEventListener('click', function () {
                                                                    paytypeCollections.moveToLastPage();
                                                                    updateNavigateButtonsCollection();
                                                                });
                                                            } else {
                                                                /*   alert("No data."); */
                                                            }
                                                        }
                                                    });
                                                }

                                                // ===================
                                                // Company Edit Button
                                                // ===================
                                                function cmdCompanyEditButton_OnClick() {
                                                    paytypeCollections.editPaytype(paytypeCollections.currentunit);

                                                }

                                                // =====================
                                                // unit delete Button
                                                // =====================
                                                function cmdunitDeleteButton_OnClick() {
                                                    var id = paytypeCollections.currentunit.Id;

                                                    console.log(typeof id + id);

                                                    $('#deleteunitConfirm').modal({
                                                        show: true,
                                                        backdrop: 'static'
                                                    });
                                                    $("#cmdConfirmDeleteunit").prop("disabled", false);
                                                    $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                                                }
                                                 // =====================
                                                // Add Account Button
                                                // =====================
                                                function cmdAddAccountButton_OnClick() {
                                                    $('#addPayType').modal({
                                                        show: true,
                                                        backdrop: 'static'
                                                    });
                                                }
                                                // Company Confirm Delete Button
                                                function cmdunitConfirmDeleteButton_OnClick() {
                                                    $("#cmdConfirmDeleteunit").prop("disabled", true);
                                                    $("#cmdConfirmDeleteCloseButton").prop("disabled", true);

                                                    //====================
                                                    var id = paytypeCollections.currentunit.Id;

                                                    $.ajax({
                                                        url: '/api/payType/delete/' + id,
                                                        type: "DELETE",
                                                        contentType: "application/json; charset=utf-8",
                                                        dataType: "json",
                                                        statusCode: {
                                                            200: function () {
                                                                $("#cmdConfirmDeleteunit").prop("disabled", true);
                                                                $("#cmdConfirmDeleteCloseButton").prop("disabled", true);
                                                                toastr.success("Successfully Deleted");
                                                                window.setTimeout(function () {
                                                                    location.reload()
                                                                }, 1000);
                                                            },
                                                            404: function () {
                                                                toastr.error("Request Not Found");
                                                                $('#deleteunitConfirm').modal('hide');
                                                                $("#cmdConfirmDeleteunit").prop("disabled", false);
                                                                $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                                                            },
                                                            400: function () {
                                                                toastr.error("Can't be deleted");
                                                                $('#deleteCompanyConfirm').modal('hide');
                                                                $("#cmdConfirmDeleteunit").prop("disabled", false);
                                                                $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                                                            }
                                                        }
                                                    });
                                                }

                                                // ==================
                                                // Navigation Buttons
                                                // ==================
                                                function updateNavigateButtonsCollection() {
                                                    if (paytypeCollections.pageSize <= 0) {
                                                        document.getElementById('navigationPageGrid').style.display = 'none';
                                                        return;
                                                    }
                                                    document.getElementById('navigationPageGrid').style.display = 'block';
                                                    if (paytypeCollections.pageIndex === 0) {
                                                        btnFirstPageGrid2.setAttribute('disabled', 'disabled');
                                                        btnPreviousPageGrid2.setAttribute('disabled', 'disabled');
                                                        btnNextPageGrid2.removeAttribute('disabled');
                                                        btnLastPageGrid2.removeAttribute('disabled');
                                                    } else if (paytypeCollections.pageIndex === (paytypeCollections.pageCount - 1)) {
                                                        btnFirstPageGrid2.removeAttribute('disabled');
                                                        btnPreviousPageGrid2.removeAttribute('disabled');
                                                        btnLastPageGrid2.setAttribute('disabled', 'disabled');
                                                        btnNextPageGrid2.setAttribute('disabled', 'disabled');
                                                    } else {
                                                        btnFirstPageGrid2.removeAttribute('disabled');
                                                        btnPreviousPageGrid2.removeAttribute('disabled');
                                                        btnNextPageGrid2.removeAttribute('disabled');
                                                        btnLastPageGrid2.removeAttribute('disabled');
                                                    }
                                                    btnCurrentPageGrid2.innerHTML = (paytypeCollections.pageIndex + 1) + ' / ' + paytypeCollections.pageCount;

                                                }


                                                //============
                                                // On Page Load
                                                // ============
                                                $(document).ready(function () {

                                                    // Navigation button
                                                    btnFirstPageGrid2 = document.getElementById('btnMoveToFirstPageGrid');
                                                    btnPreviousPageGrid2 = document.getElementById('btnMoveToPreviousPageGrid');
                                                    btnNextPageGrid2 = document.getElementById('btnMoveToNextPageGrid');
                                                    btnLastPageGrid2 = document.getElementById('btnMoveToLastPageGrid');
                                                    btnCurrentPageGrid2 = document.getElementById('btnCurrentPageGrid2');

                                                    //Collection View
                                                    getPaytypeMasterList();

                                                });
    </script>
</div>