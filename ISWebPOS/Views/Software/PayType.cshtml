    <script type="text/javascript">

        //================
        // Global variables
        // ================
        var paytypeCollections;
        var paytypeGrid;
        var editPaytype;

        var btnFirstPageGrid2;
        var btnPreviousPageGrid2;
        var btnNextPageGrid2;
        var btnLastPageGrid2;
        var btnCurrentPageGrid2;

        // =============================
        // Get ItemMasterList Data
        // =============================
        function getIPaytypeMasterList() {
            var PaytypeList = new wijmo.collections.ObservableArray();
            $("#loadingModal").modal("show");
            $.ajax({
                url: '/api/payType/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (results) {
                    $("#loadingModal").modal("hide");
                    //alert("Load");
                    /* var results = JSON.parse(result); */
                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            PaytypeList.push({
                                EditId: "<button class='btn btn-primary btn-xs btn-block' id='itemEditButton' onclick='cmdItemEditButton_OnClick()'><i class='fa fa-pencil'></i> Edit</button>",
                                DeleteId: "<button class='btn btn-danger btn-xs btn-block' id='itemDeleteButton' onclick='cmdItemDeleteButton_OnClick()'><i class='fa fa-trash'></i> Delete</button>",
                                PayType: results[i]["PayType"],
                                AccountId: results[i]["AccountId"],
             

                            });
                        }
                        paytypeCollections = new wijmo.collections.CollectionView(PaytypeList);
                        btnCurrentPageGrid2.innerHTML = (paytypeCollections.pageIndex + 1) + ' / ' + paytypeCollections.pageCount;

                        paytypeCollections.canFilter = true;
                        paytypeCollections.pageSize = 15;

                        //Filter
                        var filterText = '';
                        $('#InputFilter').keydown(function () {
                            filterText = this.value.toLowerCase();
                            paytypeCollections.refresh();
                        });
                        paytypeCollections.filter = function (
                            ) {
                            return !filterText || (item.Account.toLowerCase().indexOf(filterText) > -1);
                        }
                        paytypeCollections.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsCollection();

                        });
                        paytypeCollections.currentChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsCollection();
                        });


                        //Flex Grid
                        //alert("created");
                        paytypeGrid.dispose();
                        paytypeGrid = new wijmo.grid.FlexGrid('#paytypeCollectionGrid');
                        paytypeGrid.initialize({
                            columns: [


                            {
                                "header": "Edit",
                                "binding": "EditId",
                                "width": 60,
                                "align": "center",
                                "isContentHtml": true
                            },
                            {
                                "header": "Delete",
                                "binding": "DeleteId",
                                "width": 70,
                                "align": "center",
                                "isContentHtml": true

                            },
                            {
                                "header": "Pay Type",
                                "binding": "PayType",
                                "align": "center",
                                "allowSorting": true,
                                "isContentHtml": true,
                                "width": "2*"
                            },
                            {
                                "header": "Account",
                                "binding": "AccountId",
                                "align": "center",
                                "allowSorting": true,
                                "isContentHtml": true,
                                "width": "2*"
                            }],
                            autoGenerateColumns: false,
                            itemsSource: paytypeCollections,
                            isReadOnly: true,
                            autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                            allowDragging: wijmo.grid.AllowDragging.None,
                            selectionMode: wijmo.grid.SelectionMode.Row
                        });

                        paytypeGrid.trackChanges = true;

                        updateNavigateButtonsCollection();

                        btnFirstPageGrid2.addEventListener('click', function () {
                            paytypeCollections.moveToFirstPage();
                            updateNavigateButtonsCollection();
                        });
                        btnPreviousPageGrid2.addEventListener('click', function () {
                            paytypeCollections.moveToPreviousPage();
                            updateNavigateButtonsCollection();
                        });
                        btnNextPageGrid2.addEventListener('click', function () {
                            paytypeCollections.moveToNextPage();
                            updateNavigateButtonsCollection();
                        });
                        btnLastPageGrid2.addEventListener('click', function () {
                            paytypeCollections.moveToLastPage();
                            updateNavigateButtonsCollection();
                        });
                    } else {
                        /*   alert("No data."); */
                    }
                }
            });
        }

