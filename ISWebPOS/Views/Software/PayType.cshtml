        // Company Confirm Delete Button
        function cmdItemConfirmDeleteButton_OnClick() {
            $("#cmdConfirmDeleteItem").prop("disabled", true);
            $("#cmdConfirmDeleteCloseButton").prop("disabled", true);

            //====================
            var id = paytypeCollections.currentItem.Id;

            $.ajax({
                url: '/api/payType/delete/' + id,
                type: "DELETE",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        $("#cmdConfirmDeleteItem").prop("disabled", true);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", true);
                        toastr.success("Successfully Deleted");
                        window.setTimeout(function () {
                            location.reload()
                        }, 1000);
                    },
                    404: function () {
                        toastr.error("Request Not Found");
                        $('#deleteItemConfirm').modal('hide');
                        $("#cmdConfirmDeleteItem").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    },
                    400: function () {
                        toastr.error("Can't be deleted");
                        $('#deleteCompanyConfirm').modal('hide');
                        $("#cmdConfirmDeleteItem").prop("disabled", false);
                        $("#cmdConfirmDeleteCloseButton").prop("disabled", false);
                    }
                }
            });
        }

        // ==================
        // Navigation Buttons
        // ==================
        function updateNavigateButtonsCollection() {
            if (paytypeCollections.pageSize <= 0) {
                document.getElementById('navigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('navigationPageGrid').style.display = 'block';
            if (paytypeCollections.pageIndex === 0) {
                btnFirstPageGrid2.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid2.setAttribute('disabled', 'disabled');
                btnNextPageGrid2.removeAttribute('disabled');
                btnLastPageGrid2.removeAttribute('disabled');
            } else if (paytypeCollections.pageIndex === (paytypeCollections.pageCount - 1)) {
                btnFirstPageGrid2.removeAttribute('disabled');
                btnPreviousPageGrid2.removeAttribute('disabled');
                btnLastPageGrid2.setAttribute('disabled', 'disabled');
                btnNextPageGrid2.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid2.removeAttribute('disabled');
                btnPreviousPageGrid2.removeAttribute('disabled');
                btnNextPageGrid2.removeAttribute('disabled');
                btnLastPageGrid2.removeAttribute('disabled');
            }
            btnCurrentPageGrid2.innerHTML = (paytypeCollections.pageIndex + 1) + ' / ' + paytypeCollections.pageCount;

        }


        //============
        // On Page Load
        // ============
        $(document).ready(function () {

            // Navigation button
            btnFirstPageGrid2 = document.getElementById('btnMoveToFirstPageGrid2');
            btnPreviousPageGrid2 = document.getElementById('btnMoveToPreviousPageGrid2');
            btnNextPageGrid2 = document.getElementById('btnMoveToNextPageGrid2');
            btnLastPageGrid2 = document.getElementById('btnMoveToLastPageGrid2');
            btnCurrentPageGrid2 = document.getElementById('btnCurrentPageGrid2');
            paytypeGrid = new wijmo.grid.FlexGrid('#paytypeCollectionGrid');
            //Collection View
            getIPaytypeMasterList();

        });
    </script>
